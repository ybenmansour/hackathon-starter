pipeline {
    agent any
    
	options {
        skipStagesAfterUnstable()
    }
	
    stages {
         stage('Clone repository') { 
            steps {
                git url:'https://github.com/ybenmansour/hackathon-starter.git', branch:'master'
            }
        }

        stage("Build image") {
            steps {
                script {
                    myapp = docker.build("ybenmansour/hackathon-starter:${env.BUILD_ID}")
                }
            }
        }
         
        stage('Test'){
            steps {
                 echo 'Empty'
            }
        }
        
        stage("Push image") {
              steps {
                  script {
                      docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                              myapp.push("latest")
                              myapp.push("${env.BUILD_ID}")
                      }
                  }
              }
          }
        
        
        stage('Deploy App') {
            steps {
              script {
                kubernetesDeploy(configs: "hackathon-starter.yml", kubeconfigId: "mykubeconfig")
				}
			}
		}

    }
}
